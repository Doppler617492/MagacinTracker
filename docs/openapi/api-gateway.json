                      ]
                    },
                    "source": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "started_at": {
                      "format": "date-time",
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    },
                    "updated": {
                      "type": [
                        "integer",
                        "null"
                      ]
                    }
                  },
                  "required": [
                    "status",
                    "started_at",
                    "cached"
                  ],
                  "type": "object"
                }
              }
            },
            "description": "Sync executed"
          },
          "202": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "cached": {
                      "type": "boolean"
                    },
                    "created": {
                      "type": [
                        "integer",
                        "null"
                      ]
                    },
                    "deactivated": {
                      "type": [
                        "integer",
                        "null"
                      ]
                    },
                    "duration_ms": {
                      "type": [
                        "number",
                        "null"
                      ]
                    },
                    "finished_at": {
                      "format": "date-time",
