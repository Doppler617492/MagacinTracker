                        "string",
                        "null"
                      ]
                    },
                    "message": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "payload_hash": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "processed": {
                      "type": [
                        "integer",
                        "null"
                      ]
                    },
                    "source": {
                      "type": [
                        "string",
                        "null"
                      ]
                    },
                    "started_at": {
                      "format": "date-time",
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    },
                    "updated": {
                      "type": [
                        "integer",
                        "null"
                      ]
                    }
                  },
                  "required": [
                    "status",
                    "started_at",
                    "cached"
                  ],
                  "type": "object"
